<% if @subscription_state == "unsubscribed" %>
  <%= render 'unsubscribed' %>
<% elsif @subscription_state == "already confirmed" %>
  <%= render 'already_confirmed' %>
<% elsif @subscription_state == "error" %>
  <%= render 'error' %>
<% elsif @subscription_state == "just subscribed" %>
  <%= render 'just_subscribed' %>
<% end %>
