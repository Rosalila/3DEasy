<h2 class="ui teal image header">
	<!--  <img src="/img/logo.png" class="image"> -->
  <div class="content">
    Create an account
  </div>
</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'ui large form'}) do |f| %>

  <div class="ui stacked segment">
		<div class="field">
      <div class="ui left icon input">
		    <i class="mail icon"></i>
			  <%= f.email_field :email, autofocus: true, placeholder: 'E-mail address' %>
			</div>
		</div>

		<div class="field">
      <div class="ui left icon input">
		    <i class="user icon"></i>
			  <%= f.text_field :username, autofocus: true, placeholder: 'Username' %>
      </div>
		</div>

		<div class="field">
      <div class="ui left icon input">
		    <i class="lock icon"></i>
			  <%= f.password_field :password, autocomplete: "off", placeholder: 'Password ('+@minimum_password_length.to_s+' characters minimum)' %>
			</div>
		</div>

		<div class="field">
      <div class="ui left icon input">
		    <i class="lock icon"></i>
			  <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password confirmation' %>
			</div>
		</div>


		<div class="ui error message"></div>

		<%= devise_error_messages! %>
		<% flash.each do |key, value| %>
			<div class="ui message">
			  <div class="flash <%= key %>"><%= value %></div>
		  </div>
		<% end %>

		<div class="actions">
		  <%= f.submit "Sign up", class: "ui fluid large teal submit button" %>
		</div>
	</div>
<% end %>
