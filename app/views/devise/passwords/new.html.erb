<h2 class="ui teal image header">
	<!--  <img src="/img/logo.png" class="image"> -->
  <div class="content">
    Forgot your password?
  </div>
</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, class: 'ui large form') do |f| %>

  <div class="ui stacked segment">

    <div class="field">
      <div class="ui left icon input">
		    <i class="mail icon"></i>
        <%= f.email_field :email, autofocus: true, placeholder: 'E-mail address' %>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class: 'ui fluid large teal submit button' %>
    </div>
  </div>

	<!--<div class="ui error message"></div>-->

	<%= devise_error_messages! %>
  <% flash.each do |key, value| %>
		<div class="ui message">
	    <div class="flash <%= key %>"><%= value %></div>
    </div>
  <% end %>
<% end %>

<%= render "devise/shared/links" %>
