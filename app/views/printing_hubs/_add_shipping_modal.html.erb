<div class="ui shipping modal">
  <i class="close icon"></i>
  <div class="header">
    Add shipping method
  </div>
  <div class="image content">
    <div class="description">


			<%= form_for @shipping_type, html: {class: 'ui form' } do |f| %>
				<% if @shipping_type.errors.any? %>
					<div id="error_explanation">
						<h2><%= pluralize(@shipping_type.errors.count, "error") %> prohibited this shipping_type from being saved:</h2>

						<ul>
						<% @shipping_type.errors.full_messages.each do |message| %>
						  <li><%= message %></li>
						<% end %>
						</ul>
					</div>
				<% end %>

				<div class="field">
					<%= f.label :name %>
					<%= f.text_field :name %>
				</div>

				<div class="field">
					<%= f.hidden_field :printing_hub_id, value: @printing_hub.id %>
				</div>

				<div class="field">
					<%= f.label :doges %>
					<%= f.text_field :doges %>
				</div>

				<div class="actions">
					<%= f.submit "Create", class: "ui button" %>
				</div>
			<% end %>
    </div>
  </div>
</div>
