<div class="ui printer modal">
  <i class="close icon"></i>
  <div class="header">
    Add order
  </div>
  <div class="image content">
    <div class="description">

			<%= form_for @printer, html: {class: 'ui form' } do |f| %>
				<% if @printer.errors.any? %>
					<div id="error_explanation">
						<h2><%= pluralize(@printer.errors.count, "error") %> prohibited this printer from being saved:</h2>

						<ul>
						<% @printer.errors.full_messages.each do |message| %>
						  <li><%= message %></li>
						<% end %>
						</ul>
					</div>
				<% end %>

				<div class="field">
					<%= f.hidden_field :printing_hub_id, value: @printing_hub.id %>
				</div>

				<div class="field">
					<%= f.label :name %>
					<%= f.text_field :name %>
				</div>

				<div class="field">
					<%= f.label :ip %>
					<%= f.text_field :ip %>
				</div>

				<div class="field">
					<%= f.label :api_user %>
					<%= f.text_field :api_user %>
				</div>

				<div class="field">
					<%= f.label :api_key %>
					<%= f.text_field :api_key %>
				</div>

				<div class="actions">
					<%= f.submit "Submit", class: "ui button" %>
				</div>
			<% end %>

    </div>
  </div>
</div>
