<div class="ui cupon modal">
  <i class="close icon"></i>
  <div class="header">
    Add a new cuppon
  </div>
  <div class="image content">
    <div class="description">


			<%= form_for @cupon, html: {class: 'ui form' } do |f| %>
				<% if @cupon.errors.any? %>
					<div id="error_explanation">
						<h2><%= pluralize(@cupon.errors.count, "error") %> prohibited this cupon from being saved:</h2>

						<ul>
						<% @cupon.errors.full_messages.each do |message| %>
						  <li><%= message %></li>
						<% end %>
						</ul>
					</div>
				<% end %>

				<div class="field">
					<%= f.label :code %>
					<%= f.text_field :code, style: 'text-transform: uppercase' %>
				</div>

				<div class="field">
					<%= f.hidden_field :printing_hub_id, value: @printing_hub.id %>
				</div>

				<div class="field">
					<%= f.label :discount %>
					<%= f.text_field :discount %>
				</div>

				<div class="field">
					<%= f.label :end_date %>
					<%= f.datetime_field :end_date %>
				</div>

				<div class="actions">
					<%= f.submit "Create", class: "ui button" %>
				</div>
			<% end %>
    </div>
  </div>
</div>
